fixpoint tmap (A B : Type) (f: A -> B) (t : tree* A) {- rec t -} : tree B :=
  <tree B>
  case t of
  | node x ts => node B (f x)
    ((fix lmap (xs : list* (tree A)) {- rec xs -} : list (tree B) :=
       <list (tree B)>
       case xs of
       | nil => nil (tree B)
       | cons y ys => cons (tree B) (tmap A B f y) (lmap ys)
       end) ts)
  end.


