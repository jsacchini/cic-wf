data list (A++:Type) : Type :=
     | nil : list A
     | cons : A -> list A -> list A.


fixpoint map (A B : Type) (f : A -> B) (xs: list A) { rec xs } : list B :=
  <list B>
  case xs of
  | nil => nil B
  | cons y ys => cons B (f y) (map A B f ys)
  end.

data tree (A++:Type) : Type :=
  node : A -> list (tree A) -> tree A.

